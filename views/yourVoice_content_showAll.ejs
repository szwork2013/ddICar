<%- include header %>
<%- include meun %>

<div class="col-sm-offset-1 col-sm-7">
    <div class="well">
        <h5>管理员：<%=admin.name%></h5>
        <hr/>
        <% if(error){ %>
        <%= error %>
        <% } %>
        <% if(success){ %>
        <%= success %>
        <% } %>
        <table class="table table-hover">
            <tr>
                <td>#No.</td>
                <td>#声音类型</td>
                <td>#提示类型</td>
                <td>#操作</td>
            </tr>
            <% if(audios){ %>
            <% var n=0 %>
            <% audios.forEach(function(e){%>
            <%n++;%>
            <tr>
                <td><%=n%></td>
                <td><%=e.type%></td>
                <td><%=e.content%></td>
                <td><a href="/admins/yourVoice/delete/<%=e._id%>">删除</a></td>
            </tr>
            <%});%>
            <%}%>
        </table>
        <button type="button" class="btn btn-default " data-toggle="modal" data-target="#add">添加</button>

    </div>
</div>
<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">添加你的声音</h4>
            </div>
            <div class="modal-body">
                <p class="lead">信息录入</p>
                <form class="form-horizontal" role="form" method="POST" action="/admins/yourVoice/add" enctype='multipart/form-data'>
                    <div class="form-group">
                        <label for="type" class="col-sm-4 control-label">声音类型</label>
                        <div class="col-sm-7">
                            <select class="form-control" name="type" id="type">
                                <option value="男神">男神</option>
                                <option value="女神">女神</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="daliyPaperType" class="col-sm-4 control-label">提示类型</label>
                        <div class="col-sm-7">
                            <select class="form-control" name="content" id="content">
                                <% yourVoiceTypes.forEach(function(e){ %>
                                    <option value="<%=e.name%>"><%=e.name%></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="daliyPaperSubType" class="col-sm-4 control-label">声音文件</label>
                        <div class="col-sm-7">
                            <input name="voice" type="file" class="form-control" id="voice">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-10">
                            <button type="submit" class="btn btn-default">添加该声音</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include footer %>